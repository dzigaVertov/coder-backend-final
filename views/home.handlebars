<h1>Productos agregados</h1>

{{#if payload}}
<ul class='lista'>  
  {{#each payload}}    
      <li class='card'>
    <a href="/products/{{id}}">Ver Detalle</a>
        {{#each this}}
      <p>{{@key}}: {{this}}</p>
    {{/each}}
    </li>
  {{/each}}
</ul>
{{/if}}

<a {{#if hasPrevPage}} href={{prevLink}} {{/if}}>Prev</a>
[{{ page }} de {{totalPages}}]
<a {{#if hasNextPage}} href={{nextLink}} {{/if}}>Next</a><br>
